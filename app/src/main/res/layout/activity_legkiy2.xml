<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/math"
    android:layout_height="match_parent"
    tools:context=".legkiy_2">
    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="89 - 56 = ?"
        android:textColor="#00FFFF"
        android:textSize="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/fifty_four"
        android:backgroundTint="#FF8C00"
        android:text="54"
        android:textColor="#00FFFF"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintEnd_toStartOf="@id/thirty_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/thirty_three"
        android:backgroundTint="#FF8C00"
        android:text="33"
        android:textColor="#00FFFF"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fifty_four"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/twenty_one"
        android:backgroundTint="#FF8C00"
        android:text="21"
        android:textColor="#00FFFF"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/fifty_four"
        app:layout_constraintEnd_toStartOf="@id/ten"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/ten"
        android:backgroundTint="#FF8C00"
        android:text="10"
        android:textColor="#00FFFF"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/fifty_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/twenty_one"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>